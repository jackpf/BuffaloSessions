{% extends '::base.html.twig' %}

{%block content %}
    {% for item in items %}
        <div class="col-sm-4 item-container">
            <div class="item">
                <h3 class="title"><a href="{{ item_path(item) }}">{{ item.title }}</a></h3>
                {{ item.content }}
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block pagination %}
    <div class="row pagination-container">
        {{ knp_pagination_render(items) }}
    </div>
{% endblock %}